{
    "extends": "airbnb",
    "env": {
        "es6": true,
        "browser": true,
        "commonjs": true
    },
    "rules": {
        "indent":               ["error", 4, { "outerIIFEBody": 0 }],
        "no-trailing-spaces":   ["error", { "skipBlankLines": true }],
        "no-underscore-dangle": ["error", { "allowAfterThis": true }],
        "no-mixed-operators":   ["error", { "allowSamePrecedence": true }]
    }
}